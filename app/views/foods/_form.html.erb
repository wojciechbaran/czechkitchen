        ["Starters"],
        ["Main Course"], 
        ["Soup"],
        ["Dessert"],
        ["Beverages"],
        ["Beer"]
      ]) %>
  </div>
  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
