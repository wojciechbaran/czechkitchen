<section id="intro" class="main">
<h1>Login</h1>
<p id="error"><%= params[:notice] %></p>
<%= form_tag("/site/confirm", method: "POST") do %>

<div class="field">
    <%= label_tag(:login, "Login") %>
    <%= text_field_tag :login %>
  </div>

  <div class="field">
    <%= label_tag(:login, "Password") %>
    <%= password_field_tag :password %>
  </div>

 <div class="actions">
    <%=  submit_tag("Login") %>
  </div>
<% end %>
</section>