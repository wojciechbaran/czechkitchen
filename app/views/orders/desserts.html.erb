<section id="intro" class="main">
<h1>Chosse Desserts</h1>
<%= form_for([@order, @order.order_food.build]) do |f| %>

<table class="table">
<thead>
	<tr><td>Name</td><td>Price</td><td>Amount</td></tr>
</thead>
<tbody>
    <% @foods.each do |food| %>
    <tr><td><%= food.name %> </td><td><%= food.price %>Kc</td><td><%= f.radio_button :food_name, food.name %></td></tr>
    <% end %>
    <tr><td COLSPAN=2>Skip</td><td><%= f.radio_button :food_name, 'skip', :checked=>true %></td></tr>
</tbody>
</table>
 <div class="actions">
 <div class="actions">
	 <%= button_tag(type: 'submit', class: "button big") do %>
	 Next <i class="fa fa-arrow-right"></i> Beverages
	<% end %>
    
  </div>
  </div>
  <%= f.hidden_field :nextpage, :value =>'beverages' %>
<% end %>
</section>
